<Window x:Name="vvv" x:Class="VCar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VCar"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Vcar - Connexion" Height="450" Width="800" MinHeight="230" MinWidth="320">

    <Grid>

        <!-- Grid Connexion Test push-->
        <Grid x:Name="gridConnexion" Background="Black" Visibility="Visible">
            <StackPanel x:Name="stackConnexion" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="100" MinWidth="200" Background="Black" Visibility="Visible">
                <Label Content="Identifiant" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"/>
                <TextBox x:Name="txtIdentifiant" TextWrapping="Wrap" FontSize="22" FontFamily="Calibri" Background="Black" BorderBrush="White" Foreground="White" Margin="0,0,0,20"/>
                <Label Content="Mot de passe" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"/>
                <PasswordBox x:Name="txtPassword" FontSize="22" Background="Black" BorderBrush="White" Foreground="White"/>
                <WrapPanel Margin="0,60,0,0">
                    <Button x:Name="butAnnuler" Content="Annuler" Height="35" Width="80" Background="Red" HorizontalAlignment="Left" Click="butAnnuler_Click" BorderBrush="Black">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="butConnexion" Content="Connexion" Width="80" Height="35" Background="#FF4FFF00" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="110,0,0,0" Click="butConnexion_Click" Foreground="Black" BorderBrush="Black" IsDefault="True">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </WrapPanel>
            </StackPanel>
        </Grid>
        <!--Fin Grid Connexion-->


    </Grid>
</Window>
